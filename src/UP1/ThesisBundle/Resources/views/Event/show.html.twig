{% extends 'UP1ThesisBundle::base.html.twig' %}

{% block body -%}
    <h1>Event</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Eventtitle</th>
                <td>{{ entity.eventTitle }}</td>
            </tr>
            <tr>
                <th>Eventdescription</th>
                <td>{{ entity.eventDescription }}</td>
            </tr>
            <tr>
                <th>Eventimagelink</th>
                <td><img  height="400" width="600" src="{{ entity.eventImageLink }}"></img></td>
            </tr>
            <tr>
                <th>Eventdate</th>
                <td>{{ entity.eventDate|date("Y-d-m") }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('event') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('event_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
