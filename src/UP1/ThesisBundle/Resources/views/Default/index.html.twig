{% extends 'UP1ThesisBundle::base.html.twig' %}

{% block body -%}
    {% if message is not null %}
        <div class="alert alert-danger" role="alert">{{message}}</div>
    {% endif %}
    
    <form role="form" action="{{ url('connection') }}" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1" class="col-sm-2 control-label">Login</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter email" name="login">
            </div>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
            </div>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
{% endblock %}



